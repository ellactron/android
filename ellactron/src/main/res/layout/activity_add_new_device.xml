<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ellactron.activities.LoginActivity"
    android:weightSum="1">


    <RelativeLayout
        android:id="@+id/layout_list_device"
        android:layout_width="match_parent"
        android:layout_height="426dp">

        <ProgressBar
            android:id="@+id/search_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:indeterminate="false"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="178dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="88dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewDevice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:text="DEVICE"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="5dp" />

            <ListView
                android:id="@+id/list_device"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="31dp" />

            <TextView
                android:id="@+id/textViewWifi"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="WIFI"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="69dp" />

            <ListView
                android:id="@+id/list_wifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="93dp" >
            </ListView>

        </LinearLayout>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <Button
            android:id="@+id/button_add_device"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:layout_row="0"
            android:text="Add"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="430dp" />

        <Button
            android:id="@+id/button_search_device"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Search"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="430dp" />
    </GridLayout>

</LinearLayout>
